(defaults) {
    reload 2s
    log
    debug
    errors
    prometheus 0.0.0.0:9153
    ready 0.0.0.0:8090
}

. {

    bufsize 512

    # Parallel proxying DNS messages to upstream resolvers.
    forward . tls://1.1.1.1 tls://1.0.0.1 {
       tls_servername cloudflare-dns.com
       max_fails 1
       policy sequential
       health_check 5s
    }

    import defaults
}